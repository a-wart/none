<%= flash[:notice] %>
<table class="faucets-list">
  <thead class="faucets-list--header">
    <tr>
      <th>Link</th>
      <th>Timer</th>
      <th>Reflink</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @faucets.each do |faucet| %>
      <tr>
        <td class="faucet-item"><%= faucet.link %></td>
        <td class="faucet-item"><%= faucet.timer %></td>
        <td class="faucet-item"><%= faucet.reflink %></td>
        <td class="faucet-item"><%= link_to 'Show', faucet_path(faucet) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag faucets_import_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
